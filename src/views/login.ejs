<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <style>
                        img {
                            height: 100%;
                            width: 100%;

                        }
                    </style>
                    <div class="col-lg-6 d-none d-lg-block"><img src="../uploads/avatars/dog-1.jpeg" alt="dog_login">
                    </div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Hoş Geldiniz!</h1>
                                <% if (locals.validation_error !=undefined || locals.success_message !=undefined ||
                                    locals.login_error !=undefined) { %>
                                    <%- include('./partials/_mesaj') %>
                                        <% } %>
                            </div>
                            <form class="user" action="/login" , method="post">
                                <div class="form-group">
                                    <input type="email" value="<%= typeof email != 'undefined' ? email : ''%>"
                                        name="email" class="form-control form-control-user" id="exampleInputEmail"
                                        aria-describedby="emailHelp" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input type="password" value="<%= typeof sifre != 'undefined' ? sifre : ''%>"
                                        name="sifre" class="form-control form-control-user" id="exampleInputPassword"
                                        placeholder="Şifre">
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input type="checkbox" class="custom-control-input" id="customCheck">
                                    </div>
                                </div>
                                <button class="btn btn-primary btn-user btn-block">
                                    Giriş
                                </button>
                                <hr>

                            </form>
                            <hr>

                            <div class="text-center">
                                <a class="small" href="/register">Kayıt Ol!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>