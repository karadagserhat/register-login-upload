<div class="wrapper bg-white mt-sm-5">
<form action="/yonetim/profil-guncelle" method="post" enctype="multipart/form-data" >

    <div class="d-flex align-items-start py-3 border-bottom"> 
        <img src="/uploads/avatars/<%- user.avatar %>" width="350" height="350"
         class="img" alt="">
        <div class="pl-sm-4 pl-2" id="img-section"> <b>Profil Resmi</b>
            <p></p>
             <input name="avatar" type="file" class="btn button border"><b></b></input>
        </div>
    </div>
    <div class="py-2">
        <div class="row py-2">
            <div class="col-md-6"> <label for="firstname">Adınız</label>
                 <input type="text" name="ad" class="bg-light form-control" value="<%- user.ad%>" placeholder="Adınız"> </div>
            <div class="col-md-6 pt-md-0 pt-3"> <label for="lastname">Soyadınız</label>
                 <input type="text" name="soyad" class="bg-light form-control" value="<%- user.soyad%>" placeholder="Soyadınız"> </div>
        </div>
        <div class="row py-2">
            <div class="col-md-6"> <label for="email">Email</label>
                 <input type="text" name="email" class="bg-light form-control" readonly value="<%- user.email%>" placeholder="email"> </div>
        </div>
        
        <div class="py-3 pb-4 border-bottom">
             <button type="submit" class="btn btn-primary mr-3">Profili Güncelle</button></div>
   </form>
            
        </div>
    </div>
</div>